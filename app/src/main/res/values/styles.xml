<resources>

    <!-- Dark Theme (Current theme) -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/bgpaint_light</item>
        <item name="colorPrimaryDark">@color/bgpaint_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Light Theme (New complementary theme) -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Fullscreen Theme for both Light and Dark -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <!-- Fullscreen Light Theme -->
    <style name="FullscreenTheme.Light" parent="AppTheme.Light">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <!-- Fullscreen ActionBarStyle remains the same -->
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- MyTheme for Settings, Calibration (Dark theme) -->
    <style name="MyTheme" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@color/bgpaint_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MyTheme for Light Theme (For Settings, Calibration) -->
    <style name="MyTheme.Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- About Dialog (Dark theme) -->
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/bgpaint_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <!-- Light Theme for Dialog -->
    <style name="FullScreenDialogStyle.Light" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <!-- Calibration Progress Bar Style (remains the same) -->
    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">25dp</item>
        <item name="android:maxHeight">250dp</item>
    </style>

</resources>
